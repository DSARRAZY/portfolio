{% extends 'base.html.twig' %}

 {% block body %}
     <section id="header">
         <div class="container">
             <div class="row">
                 <div class="col-md-6">
                     <div class="intro-text">
                         <div class="overlay">
                             <h1>Bienvenue sur mon Portfolio!</h1>
                             <h2>Developpement web | Graphisme</h2>
                             <h3>Vous êtes au bon endroit</h3>
                             <a href="#about" class="js-scroll-trigger"><button type="button" class="btn btn-warning">En savoir plus !</button></a>
                         </div>
                     </div>
                 </div>
             </div>
         </div>
     </section>

     <!-- ABOUT -->

     <section id="about">
         <div class="about">
             <div class="container">
                 <div class="row">
                     <div class="col-md-6 text-center m-auto">
                         <h3>A propos de moi</h3>
                         <p>My name is Damien, mesmerized by a computer screen from as long as i can remember. Playing around with gadgets, games,
                             got in to music production, recently fell in love with code. Also have a YouTube Channel.<br/>
                             I am <b>A HUGE NERD</b> is basically what i am saying here. </p>
                     </div>
                 </div>
             </div>
         </div>
     </section>

     <!-- SKILLS -->

     <section id="skills">
         <div class="skills_container container">

             <div class="card skills_card">
                 <div class="title">
                    HMTL 5
                 </div>
                 <div class="circle">1</div>
                 <div class="skills_content">
                     <div class="icon">
                         <i class="fab fa-html5 fa-3x"></i>
                     </div>
                 </div>
             </div>

             <div class="card skills_card">
                 <div class="title">
                   CSS
                 </div>
                 <div class="circle">2</div>
                 <div class="skills_content">
                     <div class="icon">
                         <i class="fab fa-css3-alt fa-3x"></i>
                     </div>
                 </div>
             </div>

             <div class="card skills_card">
                 <div class="title">
                     PHP
                 </div>
                 <div class="circle">3</div>
                 <div class="skills_content">
                     <div class="icon">
                         <i class="fab fa-php fa-3x"></i>
                     </div>
                 </div>
             </div>

             <div class="card skills_card">
                 <div class="title">
                     J.SCRIPT
                 </div>
                 <div class="circle">4</div>
                 <div class="skills_content">
                     <div class="icon">
                         <i class="fab fa-js-square fa-3x"></i>
                     </div>
                  </div>
               </div>

         <div class="card skills_card">
             <div class="title">
                 GIT ET GITHUB
             </div>
             <div class="circle">5</div>
             <div class="skills_content">
                 <div class="icon">
                     <i class="fab fa-git fa-3x"></i>
                 </div>
             </div>
         </div>

         </div>
     </section>

     <!-- ANIMATION -->

     <section id="animation">
         <h1 class="ml6">
            <span class="text-wrapper">
                <span class="letters">Don't stop learning !</span>
            </span>
         </h1>
     </section>

     <!-- PORTFOLIO -->

     <section id="portfolio">
         <div class="portfolio">
             <div class="container">
                 <div class="row">
                     <div class="col-md-6 text-center m-auto">
                         <h3>PORTFOLIO</h3>
                         <p>Vous trouverez ici mes projets les plus récents</p>
                     </div>
                 </div>
                 <hr>
                 <div class="row">

                    {% for project in projects %}
                     <div class="col-md-4 col-sm-6 portfolio-item">
                         <div class="card-shadow">
                             <a href="http://unitedgadgetstore.co.uk/" target="_blank">
                                 <img class="img-fluid" src="https://www.dropbox.com/s/myck2bpqut3vzqc/unitedgadgetstore-web.jpg?raw=1" alt="United Gadget Store - Web">
                                 <div class="portfolio-caption">
                                     <h4>NOM DU PROJET : {{ project.name }}</h4>
                                     <p>DESCRIPTION : {{ project.description}} <p>ANNEE : {{ project.year}}</p></p>
                                     <p>LANGAGE(S) : {{ project.language}}</p>
                                     <p>LIEN VERS LE PROJET : {{ project.link}}</p>
                                 </div>
                             </a>
                         </div>
                     </div>
                    {% endfor %}

                 </div>
             </div>
         </div>
     </section>


     <!-- COUNTER -->







     <!-- CONTACT -->

     <section id="contact">
         <div class="contact">
             <div class="container">
                 <div class="row">
                     <div class="col-md-6 text-center m-auto">
                         <h3>Besoin d'un projet ?</h3>
                         <p>Dites-moi ce que vous recherchez et nous prendrons le temps ensemble d'étudier votre besoin.</p>
                     </div>
                 </div>
                 <hr>

                 <form action="" class="text-center">
                     <div class="form-row">
                         <div class="form-group col-md-6">
                             <input type="text" class="form-control form-control-lg" placeholder="Nom" required>
                         </div>
                         <div class="form-group col-md-6 ">
                             <input type="email" class="form-control form-control-lg" placeholder="Email" required>
                         </div>
                     </div>
                     <div class="form-group">
                         <input type="text" class="form-control form-control-lg" placeholder="Sujet" required >
                     </div>
                     <div class="form-group">
                         <textarea class="form-control form-control-lg" placeholder="Message" rows="6" required></textarea>
                     </div>
                     <button type="submit" class="btn btn-warning form-button">Envoyer</button>
                 </form>

             </div>
         </div>
     </section>
 {% endblock %}
